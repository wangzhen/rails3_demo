    <%=  e  %><br />
  <% end %>
  <table class="data2 data3" cellspacing="0">
    <tr>
      <th><label><%= SabroFirst.human_attribute_name("name") %>:</label></th>
      <td>
        <%#= form.text_field :name, :maxlength => 50, :size => 40 %>
      </td>
    </tr>
    <tr>
      <th><label><%= SabroFirst.human_attribute_name("email") %>:</label></th>
